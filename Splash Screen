

#include "U8glib.h"

//Display set to arduino micro pinset
U8GLIB_LD7032_60x32 u8g(13, 11, 10, 9, 8);  // SPI Com: SCK = 13, MOSI = 11, CS = 10, A0 = 9, RST = 8
// Ground is specified here due to pinout
void setup (void) {

}


