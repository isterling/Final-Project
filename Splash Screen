void u8g_splash(uint8_t a) {
  u8g.setFont(u8g_font_4x6);
  u8g.drawStr(0, 10, "CALIFORNIA");
  u8g.drawStr(0, 20, "COLLEGE OF");
  u8g.drawStr(0, 30, "ARTS");
}

void u8g_splash2(uint8_t a) {
  u8g.setFont(u8g_font_helvR08);
  u8g.drawStr( 0, 15, "PROJECT:");
  u8g.drawStr(0, 30, "EYEDUINO");
}

uint8_t draw_state = 0;

void draw(void) {

  switch (draw_state >> 3) {
    case 0: u8g.drawBitmapP( 0, 0, u8g_logo_width , u8g_logo_height, CCA_logo); break;
    case 1: u8g_splash(draw_state & 7); break;
    case 2: u8g_splash2(draw_state & 7); break;
  }
}

void loop(void) {
  u8g.firstPage();
  do {
    draw();
  }
  while ( u8g.nextPage() );
  draw_state++;
  if ( draw_state >= 2) {
    while (u8g.nextPage());
  }
  delay(450);
}
